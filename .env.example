# =============================================================================
# RelevX Research Assistant - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Search Provider API Keys
# =============================================================================
# Brave Search API Key (Current provider - $3-5 per 1K queries)
BRAVE_API_KEY=your_brave_api_key_here

# Serper.dev API Key (Recommended - $0.30-$1.00 per 1K queries, 80% cheaper)
# Sign up at: https://serper.dev
SERPER_API_KEY=your_serper_api_key_here

# =============================================================================
# LLM Provider API Keys
# =============================================================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (optional, if using Gemini models)
GEMINI_API_KEY=your_gemini_api_key_here

# =============================================================================
# Redis Cache Configuration
# =============================================================================
# Redis host (default: localhost)
REDIS_HOST=localhost

# Redis port (default: 6379)
REDIS_PORT=6379

# Redis password (optional, leave empty if no password)
REDIS_PASSWORD=

# Redis database number (default: 0)
REDIS_DB=0

# =============================================================================
# Feature Flags
# =============================================================================
# Enable search result caching (default: true)
ENABLE_SEARCH_CACHE=true

# Enable semantic query deduplication (default: false, Phase 2)
ENABLE_SEMANTIC_DEDUP=false

# Enable multi-provider fallback (default: false, Phase 2)
ENABLE_MULTI_PROVIDER=false

# =============================================================================
# Firebase Configuration (for backend services)
# =============================================================================
# Firebase credentials (if using backend services)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your_service_account_email
FIREBASE_PRIVATE_KEY=your_private_key

# =============================================================================
# Email Configuration (for report delivery)
# =============================================================================
# SendGrid API Key (if using email delivery)
SENDGRID_API_KEY=your_sendgrid_api_key

# =============================================================================
# Application Configuration
# =============================================================================
# Node environment: development | production
NODE_ENV=development

# API server port (for backend services)
PORT=3000
