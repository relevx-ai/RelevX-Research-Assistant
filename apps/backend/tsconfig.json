{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "target": "ES2020",
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "paths": {
      "@/*": [
        "./*"
      ],
      "core": [
        "../../packages/core/src/index-backend.ts"
      ],
      "core/utils": [
        "../../packages/core/src/utils/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "**/*.ts",
    "**/*.tsx",
  ]
}